<div class="release-changes">
  <% ordered_by_tag(changes).each do |change| %>
    <% if can?(:read, change) %>
      <%= div_for(change) do %>
        <%= format_change_tag change.tag %>
        <div class="change-summary"><%= format_change(change) %></div>
      <% end %>
    <% end %>
  <% end %>
</div>
